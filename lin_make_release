mkdir linux_libs/

cp /usr/lib/liballegro_monolith.so.5.2 ./linux_libs/
cp /lib/x86_64-linux-gnu/libOpenGL.so.0 ./linux_libs/

mkdir purple_martians__linux
mkdir purple_martians__linux/bitmaps
mkdir purple_martians__linux/help
mkdir purple_martians__linux/levels
mkdir purple_martians__linux/linux_libs
mkdir purple_martians__linux/logs
mkdir purple_martians__linux/savegame
mkdir purple_martians__linux/savegame/demo
mkdir purple_martians__linux/screenshots
mkdir purple_martians__linux/sel
mkdir purple_martians__linux/snd

cp bitmaps/*       purple_martians__linux/bitmaps
cp help/*          purple_martians__linux/help
cp snd/*           purple_martians__linux/snd
cp levels/level0*  purple_martians__linux/levels
